<Window x:Class="WpfApplication4.TextBoxLostFocusTest"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication4"
        mc:Ignorable="d"
        Title="TextBoxLostFocusTest" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBox x:Name="textBox" Margin="5" Width="300" LostKeyboardFocus="textBox_LostKeyboardFocus"/>
            <TextBox x:Name="textBox2" Margin="5" Width="300"/>
        </StackPanel>
    </Grid>
</Window>
