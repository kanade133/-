<Window x:Class="WpfApplication4.WindowTestControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication4"
        mc:Ignorable="d"
        Title="WindowTestControl" Height="300" Width="300">
    <Grid>
        <StackPanel>
        <local:UCSearchBox VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="0" Margin="5" Width="120" HintText="输入搜索文本" OnTextCommitted="UCSearchBox_OnTextCommitted"/>
        <TextBox HorizontalAlignment="Center" Grid.Row="1" Margin="5" x:Name="textBox" MinWidth="120" IsReadOnly="True"/>
        <local:ImageButton Margin="5" Width="80" Height="20" BorderThickness="1" BorderBrush="Gray" Background="LightGray" Text="Download" ImageSource="pack://application:,,,/WpfApplication4;component/download.png"/>
        </StackPanel>
    </Grid>
</Window>
